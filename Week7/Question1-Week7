def comp_ext_price(qty, unit_price):
  ext_price = qty * unit_price
  if ext_price > 10000:
      disc_amt = ext_price * 0.10
  else:
      disc_amt = 0
  new_ext_price = ext_price - disc_amt
  return new_ext_price

def main():
  total_ext_price = 0
  print("Do you want to do this program? (Yes or No)")
  answer = input().strip().lower()

  while answer == 'yes':
      try:
          qty = float(input("Enter quantity: "))
          price = float(input("Enter price: "))
      except ValueError:
          print("Invalid input. Please enter numerical values.")
          continue

      ext_price = comp_ext_price(qty, price)
      print(f"Quantity: {qty}, Price: {price}, Extended Price: {ext_price:.2f}")

      total_ext_price += ext_price

      print("Do you want to continue with this program? (Yes or No)")
      answer = input().strip().lower()

  print(f"Total Extended Price: {total_ext_price:.2f}")

if __name__ == "__main__":
  main()
